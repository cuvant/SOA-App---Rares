%nav.navbar.navbar-default.custom_navbar{:role => "navigation"}
  .container{style: "width: 100%;"}
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Dashboards", root_path, class: "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "New Dashboard", new_user_dashboard_path(current_user), remote: true
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Your Dashboards", dashboards_path
              %li= link_to "Edit", edit_user_path(current_user)
              %li.divider
              %li= link_to "Log out", signout_path
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Sign In", new_user_session_path, class: "active"

#new_dashboard.hidden
