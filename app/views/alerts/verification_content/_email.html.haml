.col-lg-2.col-md-2.col-sm-2.col-xs-2{style: "margin-bottom: 20px;"}
  = label_tag :type, alert.label_type, class: "control-label"

.col-lg-3.col-md-3.col-sm-3.col-xs-3
  = label_tag :email_address, alert.email_address, class: "control-label"
  
.col-lg-3.col-md-3.col-sm-3.col-xs-3.alert-links{id: "errors_#{alert.id}"}

.col-lg-4.col-md-4.col-sm-4.col-xs-4
  .alert-links.pull-right
    = link_to 'Resend Email', 'javascript:void(0)', onclick: "window.dashboards.alerts.resend_token(#{alert.id},#{alert.widget_id})",  class: 'btn btn-xs btn-custom'

.clear
